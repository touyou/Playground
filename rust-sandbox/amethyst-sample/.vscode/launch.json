  "version": "0.2.0",
  "configurations": [{
      "type": "lldb",
      "request": "launch",
      "name": "Run executable 'amethyst-sample'",
      "cargo": {
        "args": [
          "run",
        ],
        "filter": {
          "name": "amethyst-sample",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'amethyst-sample'",
      "cargo": {
        "args": [
          "build",
          "--bin=amethyst-sample",
          "--package=amethyst-sample"
        ],
        "filter": {
          "name": "amethyst-sample",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'amethyst-sample'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=amethyst-sample",
          "--package=amethyst-sample"
        ],
        "filter": {
          "name": "amethyst-sample",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
